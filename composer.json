{
    "name":        "rocket-internet-berlin/finite",
    "description": "A simple PHP5.3+ Finite State Machine",
    "keywords":    ["statemachine"],
    "homepage":    "https://github.com/rocket-internet-berlin/Finite",
    "type":        "library",
    "license":     "MIT",
    "authors": [
        {
            "name":     "Yohan Giarelli",
            "email":    "yohan@giarel.li",
            "homepage": "http://yohan.giarel.li"
        }
    ],
    "require": {
        "php": ">=5.3.0"
    },
    "require-dev": {
        "pdepend/pdepend":              "*",
        "phpmd/phpmd":                  "*",
        "phpunit/phpunit":              "*",
        "pimple/pimple":                "*",
        "symfony/dependency-injection": "*",
        "symfony/event-dispatcher":     "*",
        "symfony/framework-bundle":     "*",
        "symfony/security":             "*",
        "twig/twig":                    "*"
    },
    "suggest": {
        "pimple/pimple":                "Needed for use with PimpleFactory",
        "symfony/dependency-injection": "Needed for use with Symfony DependencyInjection Factory",
        "symfony/event-dispatcher":     "Needed for using ListenableStateMachine",
        "symfony/security":             "Needed for using SecurityAwareStateMachine",
        "symfony/yaml":                 "Yaml allows you to define your State graph in YAML"
    },
    "autoload": {
        "psr-0": { "Finite": "src/" }
    },
    "config": {
        "bin-dir":"bin"
    },
    "extra": {
        "branch-alias": {
            "dev-master": "1.0.x-dev"
        }
    }
}
